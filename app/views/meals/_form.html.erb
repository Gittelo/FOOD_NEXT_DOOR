<%= simple_form_for(@meal) do |f| %>

<div class="col-md-4 col-md-offset-4">
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description%>
    <%= f.input :grams_per_dose %>
    <%= f.input :ingredients %>

    <%#= f.input :photo %>
    <%#= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions flexing-box">
    <%= f.button :submit, class: "btn btn-success" %>
    <%= link_to "Back", meals_path, class: "btn btn-danger" %>
  </div>
</div>

<% end %>
