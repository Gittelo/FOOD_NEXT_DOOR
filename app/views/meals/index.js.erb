function refreshList(innerHTML) {
  const newList = document.getElementById('cards-section-left');
  newList.innerHTML = innerHTML;
}

refreshList('<%= j render "card_list", meals: @meals %>');

function refreshMap(innerHTMLMap) {
  const newMap = document.getElementById('map-container');
  newMap.innerHTML = innerHTMLMap;
}

refreshMap('<%= j render "map" %>');
document.app.initMap(document.getElementById('map'));

