<div class="wrapper confirmation-map-container">
  <div class="text-center confirmation-box">
    <h2>Thank you for your order, <%= @order.user.first_name %>!</h2>
    <br>
    You can pick up your meal
      <ul>
        <% @order.items.each do |item| %>
          <li>
            between <%= item.meal.week_days.first.pick_up_time_start.strftime('%I:%M %p') %> -
            <%= item.meal.week_days.first.pick_up_time_end.strftime('%I:%M %p') %>

            <strong>
              at <%= item.meal.address %>
            </strong>
          </li>
        <% end %>
      </ul>
  </div>
  <div id="map-confirmation" style="width: 100%" data-markers="<%= @markers_items.to_json %>">
  </div>

</div>
