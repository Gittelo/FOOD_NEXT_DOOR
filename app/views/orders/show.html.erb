<div class="shopping_cart-container">

  <!-- Left part of webpage, contains all items ordered -->
  <div class="items-container">
    <h1>
      Your cart
    </h1>
    <!-- Iteration over each item to display them in a table -->
    <table id="cart-table">
      <% @items.each do |item| %>
      <tr class="cart-row">
        <td class="item-image" style="background: url(<%= item.meal.photo %>)">
        </td>
        <td class="item-name"><%= item.meal.name %></td>
        <td class="item-details"><%= item.doses %> portions</td>
        <td class="item-price"><%= item.item_price %>€</td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="summary-container">
    <!--  Title Summary -->
    <div class="cart-summary">
      <h1>
        Summary
      </h1>
    </div>

    <!-- Form for coupon code (this is a fake one) -->
    <div class="form-coupon-code">
      <form action >
        <input type="hidden">
        <div class="cart-coupon-code">
          <label for="dwfrm_cart_couponCode">
            Do you have a promo code?
          </label>
          <input type="text" name="dwfrm_cart_couponCode" id="dwfrm_cart_couponCode">
          <button class="coupon-code-button" type="submit" value="dwfrm_cart_addCoupon" name="dwfrm_cart_addCoupon" id="add-coupon">
            Apply
          </button>
        </div>
      </form>
    </div>

    <!-- Subtotal box -->
    <div class="subtotal">
      <div class="price">
        <span><h3>Subtotal</h3></span>
        <span><h3><%=  @order.total_price %>€</h3></span>
      </div>
      <div class="extra-costs">
        <span>Delivery Fee</span>
        <span>Free</span>
      </div>
      <div class="extra-costs">
        <span>Taxes</span>
        <span>0.00€</span>
      </div>
    </div>

    <!-- Total price and stripe checkout button -->
    <div class="price">
      <span><h3>Total Price</h3></span>
      <span><h3><%=  @order.total_price %>€</h3></span>
    </div>
    <div class="checkout">
      <%= form_tag order_payments_path(@order) do %>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-name="Food Next Door"
        data-email="<%= current_user.email %>"
        data-description="Purchase for <%= @order.id %>"
        data-amount="<%= @order.total_price_cents %>"
        data-currency="<%= @order.total_price.currency %>"></script>
      <% end %>
    </div>

  </div>

  </div>

